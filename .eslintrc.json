{
    "env": {
        "browser": true,
        "jest": true
    },
    "extends": ["airbnb", "plugin:jsx-a11y/recommended", "plugin:prettier/recommended"],
    "plugins": [
        "flowtype",
        "react",
        "jsx-a11y"
      ],
    "parser": "babel-eslint",
    "globals": {
        "document": true,
        "window": true,
        "location": true,
        "React": true,
        "fetch": false,
        "localStorage": true,
        "navigator": true,
        "createImageBitmap": true
    },
    "rules": {
        "react/jsx-filename-extension": [1, {
            "extensions": [".js", ".jsx"]
        }],
        "no-underscore-dangle": 0,
        "react/forbid-prop-types": 0,
        "max-len": 0,
        "no-console": 0,
        "object-curly-newline": 0,
        "jsx-a11y/anchor-is-valid": ["error", {
            "components": ["Link"],
            "specialLink": ["to"]
        }],
        "no-param-reassign": 0,
        "linebreak-style": 0
    }
} 